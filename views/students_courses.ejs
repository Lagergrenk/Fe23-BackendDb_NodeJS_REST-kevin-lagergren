<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student-Courses | Kevin Lagergren</title>
    <link rel="stylesheet" href="/css/tables.css" />
  </head>
  <body>
    <h1>Studenter och kurser</h1>
    <table>
      <thead>
        <tr>
          <th>Förnamn</th>
          <th>Efternamn</th>
          <th>Kurs</th>
          <th>Ta bort</th>
        </tr>
      </thead>
      <tbody>
        <% studentsCourses.forEach(studentCourse => { %>
        <tr>
          <td><%= studentCourse.fName %></td>
          <td><%= studentCourse.lName %></td>
          <td><%= studentCourse.name %></td>
          <td>
            <form action="/students-courses/<%= studentCourse.id %>?_method=DELETE" method="POST">
              <button type="submit">Ta bort</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <!-- Lägg till student till kurs-->
    <a href="/students-courses/new">Lägg till student till kurs</a>

    <a href="/">Tillbaka</a>
  </body>
</html>
